<%- include("header") -%> 
    <div class="box" id="heading">
      <h1><%= listTitle %></h1>
    </div>

    <div class="box" id="list">
      <% for(var listItem of listItems){ %>
      <form action="./delete/<%=listTitle%>" method="post">
        <div class="item">
          <input type="checkbox" onChange="this.form.submit()" name = "itemId" value = "<%=listItem._id%>"/>
          <p><%= listItem.content %></p>
        </div>
      </form>
      <% } %>
      <form class="item" action="./<%=listTitle%>" method="post">
        <input
          type="text"
          name="content"
          placeholder="New Item"
          autofocus
          required
          autocomplete="off"
        />
        <button type="submit" name="listName" value= <%=listTitle %> >+</button>
      </form>
    </div>
<%- include("footer") -%> 